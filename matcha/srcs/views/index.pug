extends layout.pug

block style
    style.
        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: 0 auto;
            text-align: center;
        }

        .form-signin .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            font-size: 16px;
        }

        .form-signin .form-control:focus {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }


block content
    .container
        form.form-signin(method='post', action='/signin', data-ajax)
            h1.h3.mb-3.font-weight-normal Connectez-vous

            .ajax-msg

            label.sr-only() Nom d'utilisateur
            input#inputEmail.form-control(type='text', placeholder="Nom d'utilisateur", name='username', required='')

            label.sr-only(for='inputPassword') Mot de passe
            input#inputPassword.form-control(type='password', placeholder='Mot de passe', name='password', required='')

            button.btn.btn-lg.btn-primary.btn-block(type='submit') Se connecter